<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:textSize="20dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />
        <Button
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:text="⋮"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textAlignment="viewEnd"
            android:backgroundTint="@color/white">
        </Button>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/dis"
        android:text="Enter"
        android:textSize="40dp"
        android:gravity="right"
        >


    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="485dp"
        android:orientation="vertical"
        android:background="@color/btn">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="120dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_seven"
                android:text="7"
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_eight"
                android:text="8"
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_nine"
                android:text="9"
                android:textSize="40dp"></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="120dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_four"
                android:text="4"
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_five"
                android:text="5"
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_six"
                android:text="6"
                android:textSize="40dp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="120dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_one"
                android:text="1"
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_two"
                android:text="2"
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_three"
                android:text="3"
                android:textSize="40dp"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="123dp">

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_dot"
                android:text="."
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="zerobtn"
                android:text="0"
                android:textSize="40dp"></Button>

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_equals"
                android:text="="
                android:textSize="40dp"></Button>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/side_btn">

            <Button
                android:id="@+id/btn_del"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:backgroundTint="@color/side_btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_del"
                android:text="del"
                android:textSize="30dp"
                app:iconPadding="0dp"></Button>

            <Button
                android:id="@+id/btn_div"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:backgroundTint="@color/side_btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_div"
                android:text="÷"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:backgroundTint="@color/side_btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_mul"
                android:text="×"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:backgroundTint="@color/side_btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_sub"
                android:text="-"
                android:textSize="30dp"></Button>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:backgroundTint="@color/side_btn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="btn_add"
                android:text="+"
                android:textSize="30dp"></Button>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/side_bar">
        </TextView>
    </LinearLayout>
</LinearLayout>