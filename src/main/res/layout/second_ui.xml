<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:textSize="20dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:backgroundTint="@color/rad"
            android:onClick="showHistory"
            />
        <Button
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:text="⋮"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textAlignment="viewEnd"
            android:backgroundTint="@color/black">
        </Button>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="bottom|end"
        android:text="0"
        android:textColor="#EAE7E7"
        android:textSize="32sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/dis"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Enter"
        android:textSize="40dp"
        android:textColor="@color/rad"
        android:gravity="right"
        ></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_clr"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/rad_back"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_clr"
            android:text="c"
            android:textColor="@color/rad"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_open_par"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_open_para"
            android:text="("
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_closed_para"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_closed_para"
            android:text=")"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_div"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/side_btn_2_bg"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_div"
            android:text="÷"
            android:textColor="@color/side_btn_2"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_seven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_seven"
            android:text="7"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_eight"
            android:text="8"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_nine"
            android:text="9"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/side_btn_2_bg"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_mul"
            android:text="×"
            android:textColor="@color/side_btn_2"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_four"
            android:text="4"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_five"
            android:text="5"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_six"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_six"
            android:text="6"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/side_btn_2_bg"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_sub"
            android:text="-"
            android:textColor="@color/side_btn_2"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_one"
            android:text="1"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_two"
            android:text="2"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_three"
            android:text="3"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/side_btn_2_bg"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_add"
            android:text="+"
            android:textColor="@color/side_btn_2"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="zerobtn"
            android:text="0"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>


        <Button
            android:id="@+id/btn_dot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/btn_2"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_dot"
            android:text="."
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/equals"
            android:insetLeft="12dp"
            android:insetTop="12dp"
            android:insetRight="12dp"
            android:insetBottom="12dp"
            android:onClick="btn_equals"
            android:text="="
            android:textColor="@color/white"
            android:textSize="40dp"
            app:cornerRadius="20dp"
            app:iconPadding="20dp"></Button>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>